{
    "name": "ResRankNet",
    "gpu_id": 1,

    "arch": {
        "type": "ResRankNet",
        "args": {}
    },
    "train_dataloader": {
        "type": "RankIQADataloader",
        "args": {
            "dirname": "/mnt/zhxie_hdd/dataset/IQA",
            "type": "color",
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 32,
            "pin_memory": true
        }
    },
    "valid_dataloader": {
        "type": "ValidDataloader",
        "args": {
            "dirname": "/mnt/zhxie_hdd/dataset/IQA",
            "type": "color",
            "num_workers": 32,
            "pin_memory": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-4
        }
    },
    "metrics": [
        "srcc"
    ],
    "criterion": {
        "type": "BCELoss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/mnt/zhxie_hdd/results/IQA/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
