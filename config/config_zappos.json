{
    "name": "Zappos-RankNet",
    "n_gpu": 1,

    "arch": {
        "type": "RankNet",
        "args": {
            "num_features": 151
        }
    },
    "dataloader": {
        "type": "ZapposDataloader",
        "args": {
            "dirname": "/mnt/zhxie_hdd/dataset/ut-zap50k",
            "type": "open",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 32,
            "pin_memory": true,
            "validation_split": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-4
        }
    },
    "metrics": [
        "accuracy"
    ],
    "criterion": {
        "type": "BCELoss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "num_epoch": 500,
        "save_dirname": "/mnt/zhxie_hdd/results/offlineCRS/relative_predict",
        "save_period": 5,
        "early_stop": 10,
        "verbosity": 2
    }
}
