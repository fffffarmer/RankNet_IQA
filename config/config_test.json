{
    "name": "ResRankNet",
    "n_gpu": 1,

    "arch": {
        "type": "ResRankNet",
        "args": {}
    },
    "test_dataloader": {
        "type": "TestDataloader",
        "args": {
            "dirname": "/mnt/zhxie_hdd/dataset/IQA",
            "type": "texture",
            "num_workers": 32,
            "pin_memory": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-6
        }
    },
    "metrics": [
        "srcc"
    ],
    "criterion": {
        "type": "BCELoss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "num_epoch": 500,
        "save_dirname": "/mnt/zhxie_hdd/results/IQA/",
        "save_period": 5,
        "early_stop": 10,
        "verbosity": 2
    }
}
